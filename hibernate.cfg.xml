<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
		<!-- MySQL DB running on localhost -->
		<property name="connection.url">jdbc:mysql://localhost/course</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- Use the Hibernate built-in pool for tests. -->
		<property name="connection.pool_size">1</property>

		<!-- Show all SQL DML executed by Hibernate -->
		<property name="show_sql">false</property>
		<property name="use_sql_comments">true</property>
		<property name="hibernate.format_sql">true</property>
		
		<!-- Always drop and recreate the database schema on startup 
		<property name="hbm2ddl.auto">create</property>-->
		
		<!-- Thread local pattern -->
		<property name="current_session_context_class">thread</property>

        <mapping class="edu.mum.student_selector.domain.Course"/>
        <mapping class="edu.mum.student_selector.domain.Student"/>
    </session-factory>
</hibernate-configuration>